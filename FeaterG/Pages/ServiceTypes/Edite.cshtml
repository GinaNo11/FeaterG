@page
@model FeaterG.Pages.ServiceTypes.EditeModel
@{
    ViewData["Title"] = "Edite";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white">Edite New Service Type</h2>
<div class="whiteBackground">
    <form method="post">
        <input type="hidden"  asp-for="ServiceType.Id"/>
        <div class="form-group">
            <div class=" form-group row">
                <div class="col-3">
                    <label asp-for="ServiceType.ServiceName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ServiceType.ServiceName" class="form-control" />
                </div>
                <span asp-validation-for="ServiceType.ServiceName" class="text-danger"></span>
            </div>
            <div class=" form-group row">
                <div class="col-3">
                    <label asp-for="ServiceType.Price"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ServiceType.Price" class="form-control" />
                </div>
                <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
            </div>
            <div class="row form-group">
                <div class="col-6 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-primary form-control" value="Edite" />
                        </div>

                        <div class="col-6">
                            <a asp-page="/ServiceTypes/Index" class="btn btn-success form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}
